{
  "name": "subpar-editor",
  "version": "1.0.0",
  "description": "A lightweight IDE built with Electron, React, and Monaco Editor",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:main && vite build && electron-builder",
    "build:main": "tsc -p tsconfig.main.json",
    "build:vite": "vite build",
    "setup:lsp": "node scripts/setup-lsp.js"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "node-pty": "^1.0.0",
    "zustand": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.22.0",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "typescript-language-server": "^4.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.subpar.editor",
    "productName": "Subpar Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ]
  }
}
